<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".teacher.teacherFragments.notifications.NotificationAddActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="btnCancelClick"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:src="@drawable/ic_back_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="发布通知"
            android:textColor="#ffffff"
            android:textSize="20sp">

        </TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="发布班级："
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold">

        </TextView>

        <Spinner
            android:id="@+id/spinnerCname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="50dp"
            android:spinnerMode="dialog">


        </Spinner>
        <!--        <EditText-->
        <!--            android:id="@+id/txtCname"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginLeft="50dp"-->
        <!--            android:layout_marginTop="15dp"-->
        <!--            android:layout_marginRight="50dp"-->
        <!--            android:background="@null"-->
        <!--            android:hint="请输入发布班级"-->
        <!--            android:textColor="#9F9FA0"-->
        <!--            android:textColorHint="#9F9FA0" />-->

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:background="#83738F">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="通知标题："
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold">

        </TextView>

        <EditText
            android:id="@+id/txtRname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:background="@null"
            android:hint="请输入通知标题"
            android:textColor="#9F9FA0"
            android:textColorHint="#9F9FA0">

        </EditText>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:background="#83738F">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="发布时间："
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/txtRtime_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="选择日期">

        </TextView>

        <TextView
            android:id="@+id/txtRtime_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="选择时间">

        </TextView>
        <!--        <EditText-->
        <!--            android:id="@+id/txtRtime"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginLeft="50dp"-->
        <!--            android:layout_marginTop="10dp"-->
        <!--            android:layout_marginRight="50dp"-->
        <!--            android:background="@null"-->
        <!--            android:hint="请输入发布时间"-->
        <!--            android:textColor="#9F9FA0"-->
        <!--            android:textColorHint="#9F9FA0">-->

        <!--        </EditText>-->
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:background="#83738F">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="通知内容："
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold">

        </TextView>

        <EditText
            android:id="@+id/txtRcontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:background="@null"
            android:gravity="top"
            android:hint="请输入通知内容"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:minLines="3"
            android:textColor="#9F9FA0"
            android:textColorHint="#9F9FA0">

        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/buttonstyle"
            android:onClick="btnCancelClick"
            android:text="取 消"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold">

        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/buttonstyle"
            android:onClick="btnAddClick"
            android:text="确 定"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold">

        </Button>
    </LinearLayout>


</LinearLayout>